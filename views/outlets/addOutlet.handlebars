<div class="ui middle aligned center aligned grid">
	
	<div class="column eight wide" id='body'>
		<form action='/setup' method='POST'>

			<input type="hidden" name='user_id' value={{user_id}}>

			<div class="ui fluid labeled input">
				<div class="ui label">
					Outlet name: 
				</div>
				<input type="text" name='outlet_name' placeholder="J8 Pastamania">
			</div><br>

			<div class="ui fluid labeled input">
				<div class="ui label">
					Address: 
				</div>
				<input type="text" name='outlet_address' placeholder="8 Bishan Rd">
			</div><br>

			<div class="ui fluid checkbox">
				<input type="checkbox" name="outlet_GST">
				<label>GST</label>
				<input type="text" name='outlet_tax' placeholder="Default 0 %">
			</div>

			<input type="submit" value="Submit">
		</form>
	</div>
</div>